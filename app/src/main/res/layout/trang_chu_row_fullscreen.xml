<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="350dp"
       android:weightSum="10"
       android:orientation="vertical"
       android:layout_margin="5dp"
       android:background="@drawable/custom_item">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="5"
           android:id="@+id/imageViewTrangChu"
           android:layout_margin="5dp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2"
           android:id="@+id/titleNewsTrangChu"
           android:textSize="25dp"
           android:textStyle="bold"
           android:text="gafdsfsdafdsafasd"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="3"
           android:orientation="horizontal"
           android:gravity="center">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:id="@+id/descNewsTrangChu"
               android:textSize="20dp"
               android:text="fsdfafasdfadfa"/>
           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/checkboxTrangChu"
               android:button="@drawable/custom_checkbox"
               android:layout_marginRight="10dp"
               />
       </LinearLayout>


   </LinearLayout>
</LinearLayout>